<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane fx:id="anchorPane2" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/23.0.1" fx:controller="com.unaidario.controlador.PortadaControlador">
    <VBox fx:id="cajavertical" alignment="CENTER" prefHeight="600" prefWidth="400" spacing="20" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <!-- Campos de texto para las estadísticas -->
        <HBox fx:id="cajaHorizontal1" alignment="CENTER" spacing="10">
            <Label fx:id="labelVida" text="Vida:" />
            <TextField fx:id="vidaField" maxWidth="50" promptText="1-20" />
        </HBox>
        <HBox fx:id="cajaHorizontal2" alignment="CENTER" spacing="10">
            <Label fx:id="labelAtaque" text="Ataque:" />
            <TextField fx:id="ataqueField" maxWidth="50" promptText="1-20" />
        </HBox>
        <HBox fx:id="cajaHorizontal3" alignment="CENTER" spacing="10">
            <Label fx:id="labelDefensa" text="Defensa:" />
            <TextField fx:id="defensaField" maxWidth="50" promptText="1-20" />
        </HBox>
        <HBox fx:id="cajaHorizontal4" alignment="CENTER" spacing="10">
            <Label fx:id="labelEvasion" text="Evasión:" />
            <TextField fx:id="evasionField" maxWidth="50" promptText="1-20" />
        </HBox>
        <HBox fx:id="cajaHorizontal5" alignment="CENTER" spacing="10">
            <Label fx:id="labelVelocidad" text="Velocidad:" />
            <TextField fx:id="velocidadField" maxWidth="50" promptText="1-20" />
        </HBox>

        <!-- Botón para confirmar -->
        <Button fx:id="confirmButton" disable="true" onAction="#cambiarAVistaJuego" text="Confirmar" />
    </VBox>
</AnchorPane>
